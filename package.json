{
  "name": "postcss-safe-parser",
  "version": "4.0.1",
  "description": "Fault-tolerant CSS parser for PostCSS",
  "keywords": [
    "css",
    "postcss",
    "postcss-syntax",
    "parser",
    "fault tolerant"
  ],
  "scripts": {
    "clean": "del-cli build/ lib/*.js",
    "test": "yarn clean && gulp build && eslint . && gulp"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "postcss/postcss-safe-parser",
  "engines": {
    "node": ">=6.0.0"
  },
  "dependencies": {
    "postcss": "^7.0.4"
  },
  "devDependencies": {
    "@logux/eslint-config": "^35.0.4",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-precompile-charcodes": "^1.1.0",
    "babel-preset-env": "^1.7.0",
    "del-cli": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^16.0.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.1",
    "gulp-changed": "^3.2.0",
    "gulp-jest": "^4.0.2",
    "gulp-sourcemaps": "^2.6.4",
    "husky": "^4.2.1",
    "jest": "^23.4.1",
    "jest-cli": "^23.4.1",
    "lint-staged": "^10.0.7",
    "postcss-parser-tests": "^6.3.0",
    "pre-commit": "^1.1.3"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "@logux/eslint-config/node",
    "overrides": [
      {
        "files": [
          "gulpfile.js"
        ],
        "rules": {
          "node/no-unpublished-require": "off",
          "global-require": "off"
        }
      }
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/build"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 version",
              "not dead",
              "not Explorer 11",
              "not ExplorerMobile 11"
            ],
            "node": 6
          },
          "loose": true
        }
      ]
    ],
    "plugins": [
      "add-module-exports",
      "precompile-charcodes"
    ]
  },
  "main": "lib/safe-parse",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "test/*.js": "eslint",
    "lib/*.es6": "eslint"
  }
}
